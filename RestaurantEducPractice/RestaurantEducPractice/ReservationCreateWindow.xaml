<Window x:Class="RestaurantEducPractice.ReservationCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новое бронирование"
        Height="420" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF1E1E2F">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="ФИО клиента" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameBox" Height="30" Margin="0,0,0,10"
                     Background="#FF2C2C3A" Foreground="White" BorderBrush="#444"/>

            <TextBlock Text="Номер стола" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="TableNumberBox" Height="30" Margin="0,0,0,10"
                     Background="#FF2C2C3A" Foreground="White" BorderBrush="#444"/>

            <TextBlock Text="Дата бронирования" Foreground="White" Margin="0,0,0,5"/>
            <DatePicker x:Name="DatePicker" Margin="0,0,0,10" Background="#FF2C2C3A" Foreground="White"/>

            <TextBlock Text="Время (например: 18:30)" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="TimeBox" Height="30" Margin="0,0,0,10"
                     Background="#FF2C2C3A" Foreground="White" BorderBrush="#444"/>

            <TextBlock Text="Количество гостей (1-4)" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="GuestsBox" Height="30" Margin="0,0,0,20"
                     Background="#FF2C2C3A" Foreground="White" BorderBrush="#444"/>

            <Button Content="Забронировать"
                    Height="40" Background="#FF5A67D8"
                    Foreground="White" FontWeight="SemiBold"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>