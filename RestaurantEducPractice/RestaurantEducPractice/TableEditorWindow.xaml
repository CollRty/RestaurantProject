<Window x:Class="RestaurantEducPractice.TableEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать стол"
        Height="275" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Номер стола" Foreground="White"/>
            <TextBox x:Name="TableNumberBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Количество мест" Foreground="White"/>
            <TextBox x:Name="SeatsBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Статус" Foreground="White"/>
            <ComboBox x:Name="StatusBox" Height="30" Margin="0,5,0,10">
                <ComboBoxItem Content="свободно"/>
                <ComboBoxItem Content="занято"/>
            </ComboBox>

            <Button Content="Сохранить" Height="35" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>